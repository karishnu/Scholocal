<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/signup.css">
    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.js"></script>
    <title>Sign In</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:200,400,700" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
</head>
<body>
<div class="container">
    <div class="row" style="padding-bottom: -10px;border-bottom: 1px solid #34536f;">
        <h1 style="color: #34536f;border-bottom: 5px solid #002163;width: 20%;position: relative;top: 13px;">Sign
            In</h1>
    </div>
    <br><br>
    <form role="form" action="" method="post">
        <div class="row setup-content" id="step-1">
            <div class="col-xs-12 col-md-6 col-md-offset-3">
                <div class="col-md-12">
                    <br><br><br>
                    <div class="form-group row">
                        <div class="col-xs-12 col-md-3">
                            <label for="exampleInputEmail1">Email address</label>
                        </div>
                        <div class="col-xs-12 col-md-9">
                            <input type="email" class="form-control" id="email" placeholder="Email" name="email"
                                   required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-xs-12 col-md-3">
                            <label for="password">Password</label>
                        </div>
                        <div class="col-xs-12 col-md-9">
                            <input type="password" class="form-control" id="password" name="password"
                                   placeholder="Enter Password" required>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-9 col-sm-push-3" class="test">
                        <p style="color: 34536f;">Not a Member? <a href="#">Sign up</a>
                            <a href="#" class="pull-right">Forgot Password?</a></p>
                    </div>
                    <br><br>
                    <center>
                        <button class="btn btn-primary nextBtn btn-lg" type="submit" name="login">Submit</button>
                    </center>
                </div>
            </div>
        </div>
    </form>

    <script type="text/javascript">
        var user = $('#email').val(), pass = $('#password').val();
        $('login').bind('click', function () {
            $.ajax('/', {
                type: 'POST',
                contentType: 'text/json',
                data: JSON.stringify({email: user, password: pass}),
                complete: function () { /* Do something with the response. */
                }
            });
            return false; // Prevent form submit.
        });
    </script>

</div>
</body>
</html>
